<%= form_for(@empleado) do |f| %>
  <% if @empleado.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@empleado.errors.count, "errores") %> impiden que el empleado sea guardado:</h2>

      <ul>
      <% @empleado.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>
  
  <div class="field">
    <%= f.label 'Contraseña' %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label 'Confirmar contraseña' %>
    <%= f.password_field :password_confirmation %>
  </div>
  
  <div class="field">
    <%= f.label :administrador %>
    <%= f.check_box :administrador %>
  </div>
  
  <div class="field">
    <%= f.label :compras %>
    <%= f.check_box :compras %>
  </div>
  
  <div class="field">
    <%= f.label :activo %>
    <%= f.check_box :activo %>
  </div>

  <div class="actions">
    <%= f.submit 'Guardar cambios', class: 'btn btn-large btn-primary' %>
  </div>
<% end %>
